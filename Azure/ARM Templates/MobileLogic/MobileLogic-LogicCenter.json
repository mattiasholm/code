{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EnvironmentPrefix": {
            "type": "string"
        },
        "KeyVaultAdmins": {
            "type": "array"
        }
    },
    "variables": {
        "apiVersion_KeyVault": "2018-02-14-preview",
        "apiVersion_Deployments": "2018-08-01",
        "apiVersion_Storage": "2018-07-01"
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion_KeyVault')]",
            "type": "Microsoft.KeyVault/vaults",
            "name": "[concat(parameters('EnvironmentPrefix'),'-KeyVault')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "copy": [
                    {
                        "name": "accessPolicies",
                        "count": "[length(parameters('KeyVaultAdmins'))]",
                        "input": {
                            "tenantId": "[subscription().tenantId]",
                            "objectId": "[parameters('KeyVaultAdmins')[copyIndex('accessPolicies')]]",
                            "permissions": {
                                "keys": [
                                    "Get",
                                    "List",
                                    "Update",
                                    "Create",
                                    "Import",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore"
                                ],
                                "secrets": [
                                    "Get",
                                    "List",
                                    "Set",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore"
                                ],
                                "certificates": [
                                    "Get",
                                    "List",
                                    "Update",
                                    "Create",
                                    "Import",
                                    "Delete",
                                    "Recover",
                                    "Backup",
                                    "Restore",
                                    "ManageContacts",
                                    "ManageIssuers",
                                    "GetIssuers",
                                    "ListIssuers",
                                    "SetIssuers",
                                    "DeleteIssuers"
                                ],
                                "storage": []
                            }
                        }
                    }
                ],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Allow",
                    "ipRules": []
                }
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Deployments')]",
            "type": "Microsoft.Resources/deployments",
            "name": "[concat(parameters('EnvironmentPrefix'),'-DataServices')]",
            "resourceGroup": "[concat(parameters('EnvironmentPrefix'),'-DataServices')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "apiVersion": "[variables('apiVersion_Storage')]",
                            "type": "Microsoft.Storage/storageAccounts",
                            "name": "[toLower(replace(concat(parameters('EnvironmentPrefix'),'storage01'),'-',''))]",
                            "location": "[resourceGroup().location]",
                            "sku": {
                                "name": "Standard_LRS"
                            },
                            "kind": "StorageV2",
                            "properties": {}
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "KeyVaultResourceId": {
            "value": "[resourceId('Microsoft.KeyVault/vaults',concat(parameters('EnvironmentPrefix'),'-KeyVault'))]",
            "type": "string"
        },
        "KeyVaultAdmins": {
            "value": "[parameters('KeyVaultAdmins')]",
            "type": "array"
        }
    }
}