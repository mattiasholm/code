{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EnvironmentSuffix": {
            "type": "string"
        },
        "Portal-AppServiceSku": {
            "type": "string",
            "allowedValues": [
                "S1",
                "S2",
                "S3",
                "P1V2",
                "P2V2",
                "P3V2"
            ]
        },
        "Portal-AppServiceMinCapacity": {
            "type": "int",
            "minValue": 1,
            "maxValue": 20
        },
        "Portal-AppServiceMaxCapacity": {
            "type": "int",
            "minValue": 1,
            "maxValue": 20
        },
        "Portal-AppServiceDefaultCapacity": {
            "type": "int",
            "minValue": 1,
            "maxValue": 20
        },
        "Portal-LogAnalyticsRetentionDays": {
            "type": "int",
            "minValue": 0,
            "maxValue": 730
        }
    },
    "variables": {
        "apiVersion_ServerFarms": "2018-11-01",
        "apiVersion_Sites": "2018-11-01",
        "apiVersion_Insights": "2018-05-01-preview",
        "apiVersion_Workspaces": "2017-04-26-preview",
        "apiVersion_Autoscale": "2015-04-01",
        "Tag_Environment": "[if(equals(split(parameters('EnvironmentSuffix'),'-')[1],'Prod'),'Production',if(equals(split(parameters('EnvironmentSuffix'),'-')[1],'Dev'),'Development','Unknown'))]",
        "Autoscale_CpuPercentage_Increase": 70,
        "Autoscale_CpuPercentage_Decrease": 30,
        "Autoscale_TimeWindow": "PT10M",
        "Autoscale_Cooldown": "PT10M"
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion_ServerFarms')]",
            "type": "Microsoft.Web/serverfarms",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "kind": "app",
            "properties": {},
            "sku": {
                "name": "[parameters('Portal-AppServiceSku')]",
                "capacity": "[parameters('Portal-AppServiceDefaultCapacity')]"
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Sites')]",
            "type": "Microsoft.Web/sites",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "dependsOn": [
                "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]"
            ],
            "kind": "app",
            "properties": {
                "serverFarmId": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]",
                "siteConfig": {
                    "alwaysOn": true
                },
                "clientAffinityEnabled": false,
                "httpsOnly": true
            },
            "resources": [
                {
                    "apiVersion": "[variables('apiVersion_Sites')]",
                    "type": "siteextensions",
                    "name": "Microsoft.ApplicationInsights.AzureWebSites",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "Environment": "[variables('Tag_Environment')]"
                    },
                    "dependsOn": [
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
                    ]
                },
                {
                    "apiVersion": "[variables('apiVersion_Sites')]",
                    "type": "config",
                    "name": "appsettings",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "Environment": "[variables('Tag_Environment')]"
                    },
                    "dependsOn": [
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]",
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01')]",
                        "Microsoft.ApplicationInsights.AzureWebSites"
                    ],
                    "properties": {
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01'),variables('apiVersion_Insights')).InstrumentationKey]"
                    }
                }
            ]
        },
        {
            "apiVersion": "[variables('apiVersion_Insights')]",
            "type": "Microsoft.Insights/components",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "dependsOn": [
                "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
            ],
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "applicationId": "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Autoscale')]",
            "type": "Microsoft.Insights/autoscalesettings",
            "name": "AutoscaleSetting01",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "dependsOn": [
                "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]"
            ],
            "properties": {
                "enabled": true,
                "targetResourceUri": "[resourceId('Microsoft.Web/serverfarms',concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01'))]",
                "profiles": [
                    {
                        "name": "AutoscaleProfile01",
                        "capacity": {
                            "minimum": "[parameters('Portal-AppServiceMinCapacity')]",
                            "maximum": "[parameters('Portal-AppServiceMaxCapacity')]",
                            "default": "[parameters('Portal-AppServiceDefaultCapacity')]"
                        },
                        "rules": [
                            {
                                "metricTrigger": {
                                    "metricName": "CpuPercentage",
                                    "metricResourceUri": "[resourceId('Microsoft.Web/serverfarms',concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01'))]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "[variables('Autoscale_TimeWindow')]",
                                    "timeAggregation": "Average",
                                    "operator": "GreaterThan",
                                    "threshold": "[variables('Autoscale_CpuPercentage_Increase')]"
                                },
                                "scaleAction": {
                                    "direction": "Increase",
                                    "type": "ChangeCount",
                                    "value": 1,
                                    "cooldown": "[variables('Autoscale_Cooldown')]"
                                }
                            },
                            {
                                "metricTrigger": {
                                    "metricName": "CpuPercentage",
                                    "metricResourceUri": "[resourceId('Microsoft.Web/serverfarms',concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01'))]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "[variables('Autoscale_TimeWindow')]",
                                    "timeAggregation": "Average",
                                    "operator": "LessThan",
                                    "threshold": "[variables('Autoscale_CpuPercentage_Decrease')]"
                                },
                                "scaleAction": {
                                    "direction": "Decrease",
                                    "type": "ChangeCount",
                                    "value": 1,
                                    "cooldown": "[variables('Autoscale_Cooldown')]"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Workspaces')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-LogAnalytics01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": "[parameters('Portal-LogAnalyticsRetentionDays')]"
            }
        }
    ],
    "outputs": {}
}