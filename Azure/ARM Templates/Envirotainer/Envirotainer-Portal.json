{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EnvironmentSuffix": {
            "type": "string"
        },
        "Portal-AppServiceSku": {
            "type": "string",
            "allowedValues": [
                "S1",
                "S2",
                "S3",
                "P1V2",
                "P2V2",
                "P3V2"
            ]
        },
        "Portal-AppServiceCapacity": {
            "type": "int",
            "minValue": 1,
            "maxValue": 20
        },
        "Portal-LogAnalyticsSku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Premium",
                "Standalone"
            ]
        },
        "Portal-LogAnalyticsRetentionDays": {
            "type": "int",
            "minValue": 0,
            "maxValue": 730
        }
    },
    "variables": {
        "apiVersion_ServerFarms": "2018-11-01",
        "apiVersion_Sites": "2018-11-01",
        "apiVersion_Insights": "2018-05-01-preview",
        "apiVersion_Workspaces": "2017-04-26-preview",
        "Tag_Environment": "[if(equals(split(parameters('EnvironmentSuffix'),'-')[1],'Prod'),'Production',if(equals(split(parameters('EnvironmentSuffix'),'-')[1],'Dev'),'Development','Unknown'))]"
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion_ServerFarms')]",
            "type": "Microsoft.Web/serverfarms",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "kind": "app",
            "properties": {},
            "sku": {
                "name": "[parameters('Portal-AppServiceSku')]",
                "capacity": "[parameters('Portal-AppServiceCapacity')]"
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Sites')]",
            "type": "Microsoft.Web/sites",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "dependsOn": [
                "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]"
            ],
            "kind": "app",
            "properties": {
                "serverFarmId": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppPlan01')]",
                "siteConfig": {
                    "alwaysOn": true
                },
                "clientAffinityEnabled": false,
                "httpsOnly": true
            },
            "resources": [
                {
                    "apiVersion": "[variables('apiVersion_Sites')]",
                    "type": "siteextensions",
                    "name": "Microsoft.ApplicationInsights.AzureWebSites",
                    "dependsOn": [
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
                    ]
                },
                {
                    "apiVersion": "[variables('apiVersion_Sites')]",
                    "type": "config",
                    "name": "appsettings",
                    "dependsOn": [
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]",
                        "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01')]",
                        "Microsoft.ApplicationInsights.AzureWebSites"
                    ],
                    "properties": {
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01'),variables('apiVersion_Insights')).InstrumentationKey]"
                    }
                }
            ]
        },
        {
            "apiVersion": "[variables('apiVersion_Insights')]",
            "type": "Microsoft.Insights/components",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-AppInsights01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "dependsOn": [
                "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
            ],
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "applicationId": "[concat('Portal-',parameters('EnvironmentSuffix'),'-App01')]"
            }
        },
        {
            "apiVersion": "[variables('apiVersion_Workspaces')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[concat('Portal-',parameters('EnvironmentSuffix'),'-LogAnalytics01')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[variables('Tag_Environment')]"
            },
            "properties": {
                "sku": {
                    "name": "[parameters('Portal-LogAnalyticsSku')]"
                },
                "retentionInDays": "[parameters('Portal-LogAnalyticsRetentionDays')]"
            }
        }
    ],
    "outputs": {}
}