{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string"
        },
        "planKind": {
            "type": "string",
            "defaultValue": "linux",
            "allowedValues": [
                "app",
                "linux"
            ]
        },
        "planSku": {
            "type": "string",
            "defaultValue": "B1"
        },
        "apps": {
            "type": "array"
        },
        "planCapacity": {
            "type": "int",
            "defaultValue": 1,
            "minValue": 1,
            "maxValue": 10
        },
        "stSku": {
            "type": "string",
            "defaultValue": "Standard_GRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS"
            ]
        },
        "stCount": {
            "type": "int"
        },
        "vnetToggle": {
            "type": "bool"
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24"
        }
    },
    "variables": {
        "prefixStripped": "[toLower(replace(parameters('prefix'), '-', ''))]",
        "location": "[resourceGroup().location]",
        "tags": "[resourceGroup().tags]",
        "tenantId": "[subscription().tenantId]",
        "planName": "[format('plan-{0}-001', parameters('prefix'))]",
        "planId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
        "planReserved": "[if(equals(parameters('planKind'), 'linux'), true(), false())]",
        "appCount": "[length(parameters('apps'))]",
        "appIdentity": "SystemAssigned",
        "appAlwaysOn": true,
        "appHttp20Enabled": true,
        "appMinTlsVersion": "1.2",
        "appFtpsState": "FtpsOnly",
        "appClientAffinityEnabled": false,
        "appHttpsOnly": true,
        "appiName": "[format('appi-{0}-001', parameters('prefix'))]",
        "appiId": "[resourceId('Microsoft.Insights/components', variables('appiName'))]",
        "appiKind": "web",
        "appiType": "web",
        "kvName": "[format('kv-{0}-001', parameters('prefix'))]",
        "kvId": "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]",
        "kvFamily": "A",
        "kvSku": "standard",
        "kvPermissionsSecrets": [
            "Get",
            "List"
        ],
        "copy": [
            {
                "name": "appName",
                "count": "[variables('appCount')]",
                "input": "[format('app-{0}-00{1}', parameters('prefix'), copyIndex('appName', 1))]"
            },
            {
                "name": "appId",
                "count": "[variables('appCount')]",
                "input": "[resourceId('Microsoft.Web/sites', variables('appName')[copyIndex('appId')])]"
            },
            {
                "name": "linuxFxVersion",
                "count": "[variables('appCount')]",
                "input": "[format('DOCKER|nginxdemos/hello:{0}', parameters('apps')[copyIndex('linuxFxVersion')].dockerImageTag)]"
            },
            {
                "name": "stName",
                "count": "[parameters('stCount')]",
                "input": "[format('st{0}00{1}', variables('prefixStripped'), copyIndex('stName', 1))]"
            },
            {
                "name": "stId",
                "count": "[parameters('stCount')]",
                "input": "[resourceId('Microsoft.Storage/storageAccounts', variables('stName')[copyIndex('stId')])]"
            }
        ],
        "stKind": "StorageV2",
        "stAllowBlobPublicAccess": [
            false,
            true,
            false
        ],
        "stSupportsHttpsTrafficOnly": true,
        "stMinimumTlsVersion": "TLS1_2",
        "stContainerName": "[format('default/container{0}001', variables('prefixStripped'))]",
        "vnetName": "[format('vnet-{0}-001', parameters('prefix'))]",
        "snetName": "[format('snet-{0}-001', parameters('prefix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "name": "[variables('planName')]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "kind": "[parameters('planKind')]",
            "sku": {
                "name": "[parameters('planSku')]",
                "capacity": "[parameters('planCapacity')]"
            },
            "properties": {
                "reserved": "[variables('planReserved')]"
            }
        },
        {
            "copy": {
                "name": "sites",
                "count": "[variables('appCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "name": "[variables('appName')[copyIndex()]]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "identity": {
                "type": "[variables('appIdentity')]"
            },
            "properties": {
                "serverFarmId": "[variables('planId')]",
                "siteConfig": {
                    "linuxFxVersion": "[variables('linuxFxVersion')[copyIndex()]]",
                    "alwaysOn": "[variables('appAlwaysOn')]",
                    "http20Enabled": "[variables('appHttp20Enabled')]",
                    "minTlsVersion": "[variables('appMinTlsVersion')]",
                    "ftpsState": "[variables('appFtpsState')]"
                },
                "clientAffinityEnabled": "[variables('appClientAffinityEnabled')]",
                "httpsOnly": "[variables('appHttpsOnly')]"
            },
            "dependsOn": [
                "[variables('planId')]"
            ],
            "resources": [
                {
                    "type": "config",
                    "apiVersion": "2020-10-01",
                    "name": "appsettings",
                    "location": "[variables('location')]",
                    "tags": "[variables('tags')]",
                    "properties": {
                        "KEYVAULT_URL": "[reference(variables('kvId')).vaultUri]",
                        "APPLICATIONINSIGHTS_CONNECTION_STRING": "[reference(variables('appiId')).ConnectionString]"
                    },
                    "dependsOn": [
                        "[variables('appId')[copyIndex()]]",
                        "[variables('kvId')]",
                        "[variables('appiId')]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[variables('appiName')]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "kind": "[variables('appiKind')]",
            "properties": {
                "Application_Type": "[variables('appiType')]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2019-09-01",
            "name": "[variables('kvName')]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "properties": {
                "tenantId": "[variables('tenantId')]",
                "sku": {
                    "family": "[variables('kvFamily')]",
                    "name": "[variables('kvSku')]"
                },
                "copy": [
                    {
                        "name": "accessPolicies",
                        "count": "[variables('appCount')]",
                        "input": {
                            "tenantId": "[variables('tenantId')]",
                            "objectId": "[reference(variables('appId')[copyIndex('accessPolicies')],'2020-12-01','Full').identity.principalId]",
                            "permissions": {
                                "secrets": "[variables('kvPermissionsSecrets')]"
                            }
                        }
                    },
                    {
                        "name": "dependsOn",
                        "count": "[variables('appCount')]",
                        "input": "[variables('appId')[copyIndex('dependsOn')]]"
                    }
                ]
            }
        },
        {
            "copy": {
                "name": "storageAccounts",
                "count": "[parameters('stCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-01-01",
            "name": "[variables('stName')[copyIndex()]]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "kind": "[variables('stKind')]",
            "sku": {
                "name": "[parameters('stSku')]"
            },
            "properties": {
                "allowBlobPublicAccess": "[variables('stAllowBlobPublicAccess')[copyIndex()]]",
                "supportsHttpsTrafficOnly": "[variables('stSupportsHttpsTrafficOnly')]",
                "minimumTlsVersion": "[variables('stMinimumTlsVersion')]"
            },
            "resources": [
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2021-01-01",
                    "name": "[variables('stContainerName')]",
                    "location": "[variables('location')]",
                    "tags": "[variables('tags')]",
                    "dependsOn": [
                        "[variables('stId')[copyIndex()]]"
                    ]
                }
            ]
        },
        {
            "condition": "[parameters('vnetToggle')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[variables('vnetName')]",
            "location": "[variables('location')]",
            "tags": "[variables('tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('snetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetAddressPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "appUrl": {
            "type": "array",
            "copy": {
                "count": "[variables('appCount')]",
                "input": "[reference(variables('appId')[copyIndex()]).defaultHostName]"
            }
        },
        "kvUrl": {
            "type": "string",
            "value": "[reference(variables('kvId')).vaultUri]"
        },
        "stBlobUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints.blob]"
            }
        },
        "stFileUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints.file]"
            }
        },
        "stTableUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints.table]"
            }
        },
        "stQueueUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints.queue]"
            }
        }
    }
}