{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string",
            "maxLength": 17
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "appiKind": {
            "type": "string",
            "defaultValue": "web",
            "allowedValues": [
                "web",
                "ios",
                "other",
                "store",
                "java",
                "phone"
            ]
        },
        "appiType": {
            "type": "string",
            "defaultValue": "web",
            "allowedValues": [
                "web",
                "other"
            ]
        },
        "kvSku": {
            "type": "string",
            "defaultValue": "standard",
            "allowedValues": [
                "standard",
                "premium"
            ]
        },
        "kvObjectId": {
            "type": "string"
        },
        "kvPermissions": {
            "type": "object"
        },
        "pipLabels": {
            "type": "array"
        },
        "pipSku": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard"
            ]

        },
        "pipAllocation": {
            "type": "string",
            "defaultValue": "Dynamic",
            "allowedValues": [
                "Dynamic",
                "Static"
            ]
        },
        "stCount": {
            "type": "int",
            "defaultValue": 1
        },
        "stKind": {
            "type": "string",
            "defaultValue": "StorageV2",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage",
                "FileStorage",
                "BlockBlobStorage"
            ]
        },
        "stSku": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_GZRS",
                "Standard_RAGZRS",
                "Premium_LRS",
                "Premium_ZRS"
            ]
        },
        "stPublicAccess": {
            "type": "bool",
            "defaultValue": false
        },
        "stHttpsOnly": {
            "type": "bool",
            "defaultValue": true
        },
        "stTlsVersion": {
            "type": "string",
            "defaultValue": "TLS1_2",
            "allowedValues": [
                "TLS1_0",
                "TLS1_1",
                "TLS1_2"
            ]
        },
        "vnetToggle": {
            "type": "bool",
            "defaultValue": false
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "prefixStripped": "[toLower(replace(parameters('prefix'), '-', ''))]",
        "tags": "[resourceGroup().tags]",
        "tenantId": "[subscription().tenantId]",
        "appiName": "[format('appi-{0}-001', parameters('prefix'))]",
        "appiId": "[resourceId('Microsoft.Insights/components', variables('appiName'))]",
        "kvName": "[format('kv-{0}-001', parameters('prefix'))]",
        "kvId": "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]",
        "pipCount": "[length(parameters('pipLabels'))]",
        "stContainerName": "[format('default/container{0}001', variables('prefixStripped'))]",
        "vnetName": "[format('vnet-{0}-001', parameters('prefix'))]",
        "snetName": "[format('snet-{0}-001', parameters('prefix'))]",
        "copy": [
            {
                "name": "pipName",
                "count": "[variables('pipCount')]",
                "input": "[format('pip-{0}-{1}', parameters('prefix'), padLeft(copyIndex('pipName', 1), 3, '0'))]"
            },
            {
                "name": "pipId",
                "count": "[variables('pipCount')]",
                "input": "[resourceId('Microsoft.Network/publicIPAddresses', variables('pipName')[copyIndex('pipId')])]"
            },
            {
                "name": "pipDomainNameLabel",
                "count": "[variables('pipCount')]",
                "input": "[format('{0}-{1}', parameters('pipLabels')[copyIndex('pipDomainNameLabel')], parameters('prefix'))]"
            },
            {
                "name": "stName",
                "count": "[parameters('stCount')]",
                "input": "[format('st{0}{1}', variables('prefixStripped'), padLeft(copyIndex('stName', 1), 3, '0'))]"
            },
            {
                "name": "stId",
                "count": "[parameters('stCount')]",
                "input": "[resourceId('Microsoft.Storage/storageAccounts', variables('stName')[copyIndex('stId')])]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('appiName')]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "kind": "[parameters('appiKind')]",
            "properties": {
                "Application_Type": "[parameters('appiType')]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-10-01",
            "name": "[variables('kvName')]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "properties": {
                "tenantId": "[variables('tenantId')]",
                "sku": {
                    "family": "A",
                    "name": "[parameters('kvSku')]"
                },
                "accessPolicies": [
                    {
                        "tenantId": "[variables('tenantId')]",
                        "objectId": "[parameters('kvObjectId')]",
                        "permissions": "[parameters('kvPermissions')]"
                    }
                ]
            },
            "resources": [
                {
                    "type": "secrets",
                    "apiVersion": "2021-10-01",
                    "name": "appi-connectionString",
                    "tags": "[variables('tags')]",
                    "properties": {
                        "value": "[reference(variables('appiId')).connectionString]"
                    },
                    "dependsOn": [
                        "[variables('kvId')]",
                        "[variables('appiId')]"
                    ]
                }
            ]
        },
        {
            "copy": {
                "name": "publicIPAddresses",
                "count": "[variables('pipCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2021-05-01",
            "name": "[variables('pipName')[copyIndex()]]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "sku": {
                "name": "[parameters('pipSku')]"
            },
            "properties": {
                "publicIPAllocationMethod": "[parameters('pipAllocation')]",
                "dnsSettings": {
                    "domainNameLabel": "[variables('pipDomainNameLabel')[copyIndex()]]"
                }
            }
        },
        {
            "copy": {
                "name": "storageAccounts",
                "count": "[parameters('stCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-06-01",
            "name": "[variables('stName')[copyIndex()]]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "kind": "[parameters('stKind')]",
            "sku": {
                "name": "[parameters('stSku')]"
            },
            "properties": {
                "allowBlobPublicAccess": "[parameters('stPublicAccess')]",
                "supportsHttpsTrafficOnly": "[parameters('stHttpsOnly')]",
                "minimumTlsVersion": "[parameters('stTlsVersion')]"
            },
            "resources": [
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2021-06-01",
                    "name": "[variables('stContainerName')]",
                    "dependsOn": [
                        "[variables('stId')[copyIndex()]]"
                    ]
                }
            ]
        },
        {
            "condition": "[parameters('vnetToggle')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-03-01",
            "name": "[variables('vnetName')]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('snetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetAddressPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "pipUrl": {
            "type": "array",
            "copy": {
                "count": "[variables('pipCount')]",
                "input": "[format('https://{0}/', reference(variables('pipId')[copyIndex()]).dnsSettings.fqdn)]"
            }
        },
        "kvUrl": {
            "type": "string",
            "value": "[reference(variables('kvId')).vaultUri]"
        },
        "stUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints]"
            }
        }
    }
}