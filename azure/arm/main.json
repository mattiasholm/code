{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "tags": {
            "type": "object",
            "defaultValue": "[resourceGroup().tags]"
        },
        "appiKind": {
            "type": "string",
            "defaultValue": "web",
            "allowedValues": [
                "web",
                "java",
                "store",
                "ios",
                "phone",
                "other"
            ]
        },
        "kvSku": {
            "type": "string",
            "defaultValue": "standard",
            "allowedValues": [
                "standard",
                "premium"
            ]
        },
        "kvObjectId": {
            "type": "string"
        },
        "kvPermissions": {
            "type": "object"
        },
        "pdnszName": {
            "type": "string"
        },
        "pdnszRegistration": {
            "type": "bool",
            "defaultValue": false
        },
        "pdnszTtl": {
            "type": "int",
            "defaultValue": 3600
        },
        "pipLabels": {
            "type": "array"
        },
        "pipSku": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard"
            ]
        },
        "pipAllocation": {
            "type": "string",
            "defaultValue": "Dynamic",
            "allowedValues": [
                "Dynamic",
                "Static"
            ]
        },
        "stCount": {
            "type": "int",
            "defaultValue": 1
        },
        "stKind": {
            "type": "string",
            "defaultValue": "StorageV2",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage",
                "FileStorage",
                "BlockBlobStorage"
            ]
        },
        "stSku": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_GZRS",
                "Standard_RAGZRS",
                "Premium_LRS",
                "Premium_ZRS"
            ]
        },
        "stPublicAccess": {
            "type": "bool",
            "defaultValue": false
        },
        "stHttpsOnly": {
            "type": "bool",
            "defaultValue": true
        },
        "stTlsVersion": {
            "type": "string",
            "defaultValue": "TLS1_2",
            "allowedValues": [
                "TLS1_0",
                "TLS1_1",
                "TLS1_2"
            ]
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "prefix": "[toLower(format('{0}-{1}', parameters('tags').Company, parameters('tags').Application))]",
        "prefixStripped": "[replace(variables('prefix'), '-', '')]",
        "tenantId": "[subscription().tenantId]",
        "appiName": "[format('appi-{0}-001', variables('prefix'))]",
        "appiId": "[resourceId('Microsoft.Insights/components', variables('appiName'))]",
        "kvName": "[format('kv-{0}-001', variables('prefix'))]",
        "kvId": "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]",
        "pdnszId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('pdnszName'))]",
        "pipCount": "[length(parameters('pipLabels'))]",
        "containerName": "[format('container{0}001', variables('prefixStripped'))]",
        "vnetName": "[format('vnet-{0}-001', variables('prefix'))]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "snetName": "[format('snet-{0}-001', variables('prefix'))]",
        "copy": [
            {
                "name": "cnameName",
                "count": "[variables('pipCount')]",
                "input": "[format('{0}/{1}', parameters('pdnszName'), parameters('pipLabels')[copyIndex('cnameName')])]"
            },
            {
                "name": "cnameId",
                "count": "[variables('pipCount')]",
                "input": "[resourceId('Microsoft.Network/privateDnsZones/CNAME', parameters('pdnszName'), parameters('pipLabels')[copyIndex('cnameId')])]"
            },
            {
                "name": "pipName",
                "count": "[variables('pipCount')]",
                "input": "[format('pip-{0}-{1}', variables('prefix'), padLeft(copyIndex('pipName', 1), 3, '0'))]"
            },
            {
                "name": "pipId",
                "count": "[variables('pipCount')]",
                "input": "[resourceId('Microsoft.Network/publicIPAddresses', variables('pipName')[copyIndex('pipId')])]"
            },
            {
                "name": "pipLabel",
                "count": "[variables('pipCount')]",
                "input": "[format('{0}-{1}', parameters('pipLabels')[copyIndex('pipLabel')], variables('prefix'))]"
            },
            {
                "name": "stName",
                "count": "[parameters('stCount')]",
                "input": "[format('st{0}{1}', variables('prefixStripped'), padLeft(copyIndex('stName', 1), 3, '0'))]"
            },
            {
                "name": "stId",
                "count": "[parameters('stCount')]",
                "input": "[resourceId('Microsoft.Storage/storageAccounts', variables('stName')[copyIndex('stId')])]"
            },
            {
                "name": "blobId",
                "count": "[parameters('stCount')]",
                "input": "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('stName')[copyIndex('blobId')], 'default')]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('appiName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "kind": "[parameters('appiKind')]",
            "properties": {
                "Application_Type": "[if(equals(parameters('appiKind'), 'web'), 'web', 'other')]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2022-07-01",
            "name": "[variables('kvName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "tenantId": "[variables('tenantId')]",
                "sku": {
                    "family": "A",
                    "name": "[parameters('kvSku')]"
                },
                "accessPolicies": [
                    {
                        "tenantId": "[variables('tenantId')]",
                        "objectId": "[parameters('kvObjectId')]",
                        "permissions": "[parameters('kvPermissions')]"
                    }
                ]
            },
            "resources": [
                {
                    "type": "secrets",
                    "apiVersion": "2022-07-01",
                    "name": "APPLICATIONINSIGHTS-CONNECTION-STRING",
                    "tags": "[parameters('tags')]",
                    "properties": {
                        "value": "[reference(variables('appiId')).connectionString]"
                    },
                    "dependsOn": [
                        "[variables('kvId')]",
                        "[variables('appiId')]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2020-06-01",
            "name": "[parameters('pdnszName')]",
            "location": "global",
            "tags": "[parameters('tags')]",
            "resources": [
                {
                    "condition": "[not(empty(parameters('vnetAddressPrefix')))]",
                    "type": "virtualNetworkLinks",
                    "apiVersion": "2020-06-01",
                    "name": "[variables('vnetName')]",
                    "location": "global",
                    "properties": {
                        "virtualNetwork": {
                            "id": "[variables('vnetId')]"
                        },
                        "registrationEnabled": "[parameters('pdnszRegistration')]"
                    },
                    "dependsOn": [
                        "[variables('pdnszId')]",
                        "[variables('vnetId')]"
                    ]
                }
            ]
        },
        {
            "copy": {
                "name": "publicIPAddresses",
                "count": "[variables('pipCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Network/privateDnsZones/CNAME",
            "apiVersion": "2020-06-01",
            "name": "[variables('cnameName')[copyIndex()]]",
            "properties": {
                "ttl": "[parameters('pdnszTtl')]",
                "cnameRecord": {
                    "cname": "[reference(variables('pipId')[copyIndex()]).dnsSettings.fqdn]"
                }
            },
            "dependsOn": [
                "[variables('pdnszId')]",
                "[variables('pipId')[copyIndex()]]"
            ]
        },
        {
            "copy": {
                "name": "publicIPAddresses",
                "count": "[variables('pipCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2022-01-01",
            "name": "[variables('pipName')[copyIndex()]]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "[parameters('pipSku')]"
            },
            "properties": {
                "publicIPAllocationMethod": "[parameters('pipAllocation')]",
                "dnsSettings": {
                    "domainNameLabel": "[variables('pipLabel')[copyIndex()]]"
                }
            }
        },
        {
            "copy": {
                "name": "storageAccounts",
                "count": "[parameters('stCount')]",
                "mode": "parallel"
            },
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-09-01",
            "name": "[variables('stName')[copyIndex()]]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "kind": "[parameters('stKind')]",
            "sku": {
                "name": "[parameters('stSku')]"
            },
            "properties": {
                "allowBlobPublicAccess": "[parameters('stPublicAccess')]",
                "supportsHttpsTrafficOnly": "[parameters('stHttpsOnly')]",
                "minimumTlsVersion": "[parameters('stTlsVersion')]"
            },
            "resources": [
                {
                    "type": "blobServices",
                    "apiVersion": "2021-09-01",
                    "name": "default",
                    "dependsOn": [
                        "[variables('stId')[copyIndex()]]"
                    ],
                    "resources": [
                        {
                            "type": "containers",
                            "apiVersion": "2021-09-01",
                            "name": "[variables('containerName')]",
                            "dependsOn": [
                                "[variables('blobId')[copyIndex()]]"
                            ]
                        }
                    ]
                }

            ]
        },
        {
            "condition": "[not(empty(parameters('vnetAddressPrefix')))]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2022-01-01",
            "name": "[variables('vnetName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('snetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetAddressPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "kvUrl": {
            "type": "string",
            "value": "[reference(variables('kvId')).vaultUri]"
        },
        "pdnszUrl": {
            "type": "array",
            "copy": {
                "count": "[variables('pipCount')]",
                "input": "[reference(variables('cnameId')[copyIndex()]).fqdn]"
            }
        },
        "pipUrl": {
            "type": "array",
            "copy": {
                "count": "[variables('pipCount')]",
                "input": "[format('https://{0}/', reference(variables('pipId')[copyIndex()]).dnsSettings.fqdn)]"
            }
        },
        "stUrl": {
            "type": "array",
            "copy": {
                "count": "[parameters('stCount')]",
                "input": "[reference(variables('stId')[copyIndex()]).primaryEndpoints]"
            }
        }
    }
}